extends layout

block content
  h1= title
  div.form-group
    label(for='testTypeSelect') Test Type
    select.form-control#testTypeControlSelect
      option Compare a measure taken by two operators on different patients
      option Compare one operator checking measures twice in different patients
      option Compare two measures or methods for the same parameter in different patients
      option Compare a measurement made in the same patient under different conditions (e.g. rest and exercise)
      option Assess variation in sequential measurements by the same operator in the same patient (Repeatability)
  div.form-group
    label(for='dataTypeSelect') Type of Data
    select.form-control#dataTypeSelect
      option(selected) Continuous
      option Categorical
  div#measureTypeGroup.form-group
    label(for='measureTypeSelect') Measurement
    select.form-control#testMeasureControlSelect
      option AV Vmax (cm/s)
      option LVOT Vmax (cm/s)
      option AVA (cm²)
      option MVA (cm²)
      option PV Vmax (cm/s)
      option TR Vmax (cm/s)
      option Peak E Velocity (cm/s)
      option TDI (E/e')

  div#continuousEntry
    table.table
      thead
        tr
          th Observation No.
          th Test 1 Measurement
          th Test 2 Measurement
          th Average Measurement
      tbody
        tr
          td 1
          td 
            input.valueInput(type='text' value='0')
          td 
            input.valueInput(type='text' value='0')
          td
            div.avg 0
    button.btn.btn-info(onclick='addNewRow("continuousEntry")') Add new record
    button.btn.btn-success(onclick='showResults("continuousEntry")') Show Results
    label Load TSV File:
    input#fileInput.btn(type='file')

  div#categoricalEntry(style='display:none')
   table.table
    thead
      tr
        th Observation No.
        th Mild/Mild
        th Mild/Moderate
        th Mild/Severe
        th Moderate/Mild
        th Moderate/Moderate
        th Moderate/Severe
        th Severe/Mild
        th Severe/Moderate
        th Severe/Severe
    tbody
      tr
        td 1
        td 
          input.valueInput(type='radio' name='opt_1' value='Mild_Mild')
        td 
          input.valueInput(type='radio' name='opt_1' value='Mild_Moderate')
        td 
          input.valueInput(type='radio' name='opt_1' value='Mild_Severe')
        td 
          input.valueInput(type='radio' name='opt_1' value='Moderate_Mild')
        td 
          input.valueInput(type='radio' name='opt_1' value='Moderate_Moderate')
        td 
          input.valueInput(type='radio' name='opt_1' value='Moderate_Severe')
        td 
          input.valueInput(type='radio' name='opt_1' value='Severe_Mild')
        td 
          input.valueInput(type='radio' name='opt_1' value='Severe_Moderate')
        td
          input.valueInput(type='radio' name='opt_1' value='Severe/Severe')

    button.btn.btn-info(onclick='addNewRow("categoricalEntry")') Add new record
    button.btn.btn-success(onclick='showResults("categoricalEntry")') Show Results

  div#results.row(style='display:none')
    div#continuousResults(style='display:none')
      div.row
        div.col-sm-6
          div#bland
          div#values
            div#bias Bias
            div#upper Upper limit
            div#lower Lower limit
        div.col-sm-6
          div#linear
          div#values
            div#gradient Equation:
            div#y y
            div#r r²
    div#categoricalResults(style='display:none')
      h2 Totals
      table.table
        thead
          th Judge 1 vs Judge 2
          th Mild
          th Moderate
          th Severe
          th Total (Judge 1)
        tbody
          tr
            th Mild
            td#Mild_Mild 0
            td#Mild_Moderate 0
            td#Mild_Severe 0
            td#Total_Mild 0
          tr 
            th Moderate
            td#Moderate_Mild 0
            td#Moderate_Moderate 0
            td#Moderate_Moderate 0
            td#Total_Moderate 0
          tr
            th Severe
            td#Severe_Mild 0
            td#Severe_Moderate 0
            td#Severe_Severe 0
            td#Total_Severe 0
          tr
            th Total (Judge 2)
            td#Mild_Total 0
            td#Moderate_Total 0
            td#Severe_Total 0
            td#Total_Total 0

      h2 Agreements
      table.table
        thead
          th 
          th Mild
          th Moderate
          th Severe
          th Total
        tbody
          tr
            th Number of agreements
            td#Agree_Mild 0
            td#Agree_Moderate 0
            td#Agree_Severe 0
            td#Total_Agree 0
          tr#Chance_Row
            th Agreements due to chance
            td#Chance_Mild 0
            td#Chance_Moderate 0
            td#Chance_Severe 0
            td#Total_Chance 0
      p#Kappa

